{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "SimDb": "Data Source=/app/data/pilotsim.db",
    "Redis": "redis:6379"
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "ApiPolicy": {
      "PermitLimit": 10,
      "WindowInMinutes": 1
    },
    "SttPolicy": {
      "TokenLimit": 5,
      "ReplenishmentPeriodInMinutes": 1,
      "TokensPerPeriod": 3
    },
    "WebPolicy": {
      "PermitLimit": 100,
      "WindowInMinutes": 1
    }
  },
  "Caching": {
    "DefaultExpirationMinutes": 30,
    "ScenarioExpirationMinutes": 60,
    "MetarExpirationMinutes": 30,
    "TrafficExpirationMinutes": 2
  },
  "BackgroundTraffic": {
    "EnableBackgroundTraffic": true,
    "MinIntervalSeconds": 45,
    "MaxIntervalSeconds": 90,
    "MaxActiveTrafficPerSession": 5
  },
  "Audio": {
    "MaxFileSizeMB": 25,
    "AllowedFormats": ["audio/wav", "audio/mpeg", "audio/mp4", "audio/webm", "audio/ogg"],
    "StoragePath": "/app/wwwroot/audio"
  },
  "Security": {
    "RequireHttps": true,
    "EnableCors": false,
    "AllowedOrigins": []
  },
  "Performance": {
    "EnableResponseCompression": true,
    "EnableOutputCaching": true,
    "MaxRequestSizeBytes": 26214400
  }
}